<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Practice App Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageButton"
            tools:layout_editor_absoluteY="71dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" tools:src="#C8D8D6"
            android:src="@mipmap/ic_launcher_round" android:background="#1BFFFFFF"/>
    <Switch
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/switch1"
            tools:layout_editor_absoluteY="240dp"/>
    <HorizontalScrollView
            android:layout_width="409dp"
            android:layout_height="346dp" tools:layout_editor_absoluteX="1dp"
            app:layout_constraintTop_toBottomOf="parent">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="vertical"/>
    </HorizontalScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_gravity="bottom" tools:layout_editor_absoluteX="1dp" android:id="@+id/bottomAppBar"
            tools:layout_editor_absoluteY="622dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
